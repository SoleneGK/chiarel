{% macro display_header(page_title) %}
<header>
    <div>
        <a href="{{ path('homepage') }}">
            <picture>
                <source media="(min-width: 789px)" srcset="{{ asset('images/logos/logo_homepage_w409px.png') }}">
                <img src="{{ asset('images/logos/logo_homepage_w105px.png') }}" alt="Logo Chiarel">
            </picture>
        </a>
    </div>
    <div class="homepage_title">
        <h1>{{ page_title }}</h1>
        <p class="subtitle">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Explicabo, excepturi.</p>
    </div>
</header>
{% endmacro %}



